#!/bin/bash

# Usage
[ "${1##*-}" == 'help' ] && cat <<EOF && exit 1
USAGE: ${0##*/} [-H|--header] <file> ...

SYNOPSIS:
  Parse SSH server logs and output access summary to stdout
EOF

# Options
while [ "${1:0:1}" == '-' ]; do
  case "${1}" in
  '-H' | '--header') echo 'STATUS|USERNAME|IPADDR|COUNT' ;;
  *) echo "ERROR: Unsupported option (${1})" >&2 ;;
  esac
  shift
done

# Parse logs
[ -z "$*" ] && exit 0
logparse-ssh.detail "$@" |
  cut -d'|' -f2-4 |
  sort | uniq -c |
  awk 'BEGIN { OFS="|" }; { print $2,$1 }'
