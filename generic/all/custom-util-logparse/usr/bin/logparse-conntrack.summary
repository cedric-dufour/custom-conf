#!/bin/bash

# Usage
[ "${1##*-}" == 'help' ] && cat <<EOF && exit 1
USAGE: ${0##*/} [-H|--header] <file> ...

SYNOPSIS:
  Parse conntrackd (stats) logs and output traffic summary to stdout
EOF

# Options
while [ "${1:0:1}" == '-' ]; do
  case "${1}" in
  '-H' | '--header')
    echo 'SRC_IP|DST_IP|PROTO|DST_PORT|COUNT|PACKETS|BYTES'
    ;;
  *)
    echo "ERROR: Unsupported option (${1})" >&2
    ;;
  esac
  shift
done

# Parse logs
[ -z "$*" ] && exit 0
logparse-acat "$@" |
  sed -nE 's#^.*(tcp|udp)\s+\S+\s+CLOSE\s+src=(\S+)\s+dst=(\S+)\s+sport=\S+\s+dport=(\S+)\s+packets=(\S+)\s+bytes=(\S+)\s.*$#\2 \3 \1 \4 \5 \6#p' |
  awk '{K=$1"|"$2"|"$3"|"$4; N[K]+=1; P[K]+=$5; B[K]+=$6}; END {for (K in N) printf("%s|%d|%d|%d\n",K,N[K],P[K],B[K])}' |
  sort -t'|' -k7,7 -n -r
